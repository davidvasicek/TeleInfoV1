<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbardd"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                >


                <TextView
                    android:id="@+id/unregisteredHoursMainActivityAdapterItemTextViewLearnedHour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2. Pololetí"
                    android:textColor="@color/text_primary"
                    android:textSize="16dp"
                    android:tag="tagForDelete"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="od 26.1.2023"
                    android:textColor="@color/text_secondary"
                    android:textSize="8dp"
                    android:tag="tagForDelete"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_weight="1"/>



            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Poslední synchronizace:"
                    android:textSize="12dp"
                    android:id="@+id/textHours"
                    android:gravity="center"

                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26.9.2022"
                    android:textSize="12dp"
                    android:id="@+id/textLastSynchronization"
                    android:gravity="center"

                    />


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>



    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewColumnHeadervfsv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="#16c58c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Přítomen"
                android:gravity="left"
                android:textColor="@color/text_primary"
                android:textSize="10dp"
                android:id="@+id/scheduleOfTheYearTextViewygDateTo"
                android:textAllCaps="true"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewColumnHddeader"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="#f48c00"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nepřítomen"
                android:gravity="left"
                android:textColor="@color/text_primary"
                android:textSize="10dp"
                android:id="@+id/scheduleOfTheYearTextViewDateddTo"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewColumnHeayggder"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="#7100c1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nezapočítávána"
                android:gravity="left"
                android:textColor="@color/text_primary"
                android:textSize="10dp"
                android:id="@+id/scheduleOfTheYearTextViygfgewDateTo"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewColumnHeadeygfr"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="#c20e1a"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neomluveno"
                android:gravity="left"
                android:textColor="@color/text_primary"
                android:textSize="10dp"
                android:id="@+id/scheduleOfTheYearTextVygfdfgiewDateTo"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewColumnHeadeygfydgr"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="#00A2e2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potvrzeno"
                android:gravity="left"
                android:textColor="@color/text_primary"
                android:textSize="10dp"
                android:id="@+id/scheduleOfTheYearTextViewDatygfeTo"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewColumnygfdHeader"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardBackgroundColor="#607D8B"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp">

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nepotvzeno"
                android:gravity="left"
                android:textColor="@color/text_primary"
                android:textSize="10dp"
                android:id="@+id/scheduleOfTheYearTextViewDateTo"
                android:textAllCaps="true"
                android:textStyle="bold" />



        </LinearLayout>



    </HorizontalScrollView>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/administrationsOrganizationsOrganizationsListActivity_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/administrationsOrganizationsOrganizationsListActivity_TextViewMessageRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Nepodařilo se načíst žádná data"
            android:layout_marginTop="40dp"
            android:textColor="@color/text_secondary"
            android:textSize="13dp"
            android:tag="tagForDelete"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/administrationsOrganizationsOrganizationsListActivity_TextViewMessageRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Zkontrolujte připojení k internetu"
            android:layout_marginTop="70dp"
            android:textColor="@color/text_secondary"
            android:textSize="11dp"
            android:tag="tagForDelete"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/administrationsOrganizationsOrganizationsListActivity_ButtonRefrest"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Opakovat"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            />



        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/administrationsOrganizationsOrganizationsListActivity_AVLoadingIndicatorViewIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallClipRotatePulseIndicator"
            app:indicatorColor="@color/text_secondary"
            />

    </RelativeLayout>

</LinearLayout>